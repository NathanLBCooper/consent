root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
end_of_line = crlf

[*.{config,xml,js,json,html,css,sql,csproj,props,yml,proto}]
indent_size = 2

[*.cs]
end_of_line = crlf:warning
# use var everywhere
csharp_style_var_for_built_in_types = true:warning
csharp_style_var_when_type_is_apparent = true:warning
csharp_style_var_elsewhere = true:warning
# use file_scoped namespaces
csharp_style_namespace_declarations = file_scoped:warning
# Organize usings 
dotnet_sort_system_directives_first = true:warning
# Expression-level preferences
dotnet_style_prefer_conditional_expression_over_return = false
# Don't force `var (a, b) = Foo();` over `var aandbTuple = Foo();`
csharp_style_deconstructed_variable_declaration = false
# private member underscores
dotnet_naming_rule.instance_fields_should_be_camel_case.severity = suggestion:warning
dotnet_naming_rule.instance_fields_should_be_camel_case.symbols = instance_fields:warning
dotnet_naming_rule.instance_fields_should_be_camel_case.style = instance_field_style:warning
dotnet_naming_symbols.instance_fields.applicable_kinds = field:warning
dotnet_naming_style.instance_field_style.capitalization = camel_case:warning
dotnet_naming_style.instance_field_style.required_prefix = _:warning
# prevent discarded variables
csharp_style_unused_value_expression_statement_preference = discard_variable:warning
csharp_style_unused_value_assignment_preference = discard_variable:warning
dotnet_code_quality_unused_parameters = all:warning
